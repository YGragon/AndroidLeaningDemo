<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dongxi.rxdemo.event_bus.EventBus1Activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/event_bus1_tv"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="kotlin"
            android:gravity="center"/>
        <Button
            android:id="@+id/bt_message"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@id/event_bus1_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            />

        <Button
            android:id="@+id/bt_subscription"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@id/bt_message"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
