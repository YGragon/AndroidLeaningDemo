<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--toolbar-->
    <declare-styleable name="CustomToolbar">
        <attr name="rightButtonIcon" format="reference"/>
        <attr name="isShowSearchView" format="boolean"/>
        <attr name="rightButtonText" format="string"/>
        <attr name="leftButtonText" format="string"/>
        <attr name="leftIcon" format="reference"/>
    </declare-styleable>
    <!--角标-->
    <declare-styleable name="CornerLabelView">
        <attr name="side_length" format="dimension" />
        <attr name="margin_lean_side" format="dimension" />
        <attr name="bg_color" format="color" />
        <attr name="text_color" format="color" />
        <attr name="text_size" format="dimension" />
        <attr name="text" format="string" />
        <attr name="position">
            <enum name="right_top" value="0" />
            <enum name="right_bottom" value="1" />
            <enum name="left_bottom" value="2" />
            <enum name="left_top" value="3" />
        </attr>
    </declare-styleable>
    <declare-styleable name="CornerMark">
        <!--支持的角标类型-->
        <attr name="mark_type" format="enum">
            <!--梯形-->
            <enum name="TRAPEZOID" value="10"/>
            <!--矩形-->
            <enum name="RECTANGLE" value="20"/>
            <enum name="BOOKMARK" value="30"/>
        </attr>
        <!--角标位置-->
        <attr name="mark_location" format="enum">
            <!--左上角-->
            <enum name="LEFT_TOP" value="1"/>
            <!--右上角-->
            <enum name="RIGHT_TOP" value="2"/>
            <!--左下角-->
            <enum name="LEFT_BOTTOM" value="3"/>
            <!--右下角-->
            <enum name="RIGHT_BOTTOM" value="4"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="CornerMark.Trapezoid">
        <!--填充色-->
        <attr name="trapezoid_background_color" format="color"/>
        <!--长边-->
        <attr name="long_side" format="dimension"/>
        <!--短边-->
        <attr name="short_side" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="CornerMark.Rectangle">
        <!--填充色-->
        <attr name="rectangle_background_color" format="color"/>
        <!--左上角圆角半径-->
        <attr name="left_top_corner" format="dimension"/>
        <!--右上角圆角半径-->
        <attr name="right_top_corner" format="dimension"/>
        <!--左下角圆角半径-->
        <attr name="left_bottom_corner" format="dimension"/>
        <!--右下角圆角半径-->
        <attr name="right_bottom_corner" format="dimension"/>
        <!--圆角半径,会被独立设定的圆角半径覆盖-->
        <attr name="corner" format="float"/>
    </declare-styleable>

    <declare-styleable name="CornerMark.BookMark">
        <!--填充色-->
        <attr name="bookmark_background_color" format="color"/>
        <!--凸起顶点的角度-->
        <attr name="angle" format="integer"/>
        <!--横边长度-->
        <attr name="horizontal_side" format="dimension"/>
        <!--竖边长度-->
        <attr name="vertical_side" format="dimension"/>
    </declare-styleable>
    <!--能级-->
    <declare-styleable name="EnergyView">
        <!--当前的等级文字大小-->
        <attr name="current_text_size" format="dimension"/>
        <!--当前的等级文字颜色-->
        <attr name="current_text_color" format="color" />
    </declare-styleable>
</resources>